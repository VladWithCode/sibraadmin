{
  "name": "admin-sibra",
  "author": "GG Marketing",
  "productName": "Sibra Administración",
  "version": "1.0.0",
  "private": true,
  "description": "Aplicación de administración para SIBRA",
  "main": "public/electron.js",
  "license": "ISC",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "date-fns": "^2.22.1",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^15.2.0",
    "html-to-draftjs": "^1.5.0",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-big-calendar": "^0.33.5",
    "react-dom": "^17.0.2",
    "react-draft-wysiwyg": "^1.14.7",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.32.12",
    "styled-components": "^5.2.3",
    "swr": "^1.2.2",
    "wait-on": "^5.3.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts --openssl-legacy-provider start",
    "build": "react-scripts --openssl-legacy-provider build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder -c.extraMetadata.main=./build/electron.js"
  },
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^22.14.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extends": null,
    "appId": "sibra-admin",
    "productName": "Sibra",
    "win": {
      "target": "nsis",
      "icon": "setup/favicon.ico"
    },
    "files": [
      "build/**/*",
      "build/assets/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "nsis": {
      "installerIcon": "setup/favicon.ico",
      "uninstallerIcon": "setup/favicon.ico",
      "uninstallDisplayName": "Sibra",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
